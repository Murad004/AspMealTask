@model IEnumerable<AspMealTask.Entities.Meal>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HotMeal</title>

    <style>
        body {
            background-color: orange;
        }

        h1 {
            text-align: center;
            color: green;
            font-size: 3em;
        }

        .show_div {
            margin-top: 20px;
            border: solid green 2px;
            display: block;
            width: 200px;
            text-align: center;
            margin-left: 860px;
            cursor: pointer;
            transition-duration: 1s;
        }

            .show_div > img {
                width: 100px;
                height: 100px;
            }

            .show_div > h2 {
                margin-top: 5px;
                color: white;
                font-size: 2em;
            }
    </style>

</head>
<body>
    <h1>Hot Meals</h1>

    @foreach (var item in Model)
    {
        <div onmouseover="this.style.backgroundColor='black'" onmouseout="this.style.backgroundColor='transparent'" class="show_div">
            <img src="@Url.Content(item.ImagePath)" />
            <h2>@item.Name</h2>
        </div>
    }

</body>
</html>
